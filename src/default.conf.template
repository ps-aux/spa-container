server {
   listen ${SERVER_PORT};

   location / {
       root /www;
       try_files $uri $uri/index.html /index.html =404;
   }

   location /conf {
       root /www;
       try_files /conf.json =404;
   }

   location /api/ {
       proxy_pass ${API_PROXY_TARGET};
   }

   location /auth/ {
       proxy_pass ${API_PROXY_TARGET};
   }

}


